{
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "clang++",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-std=c++17",
                "-O0",
                "-g",               
                "-o",
                "${workspaceFolder}/build/test.exe",
                "tests/test_main.cpp"
                // "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ],
    "version": "2.0.0"
}